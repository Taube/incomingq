{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, //  Helps ensure consistent file name casing.

    /* Testing */
    "types": ["vitest/globals", "vite/client", "@vitejs/plugin-react-swc"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": [
    "tailwind.config.ts",
    "postcss.config.js",
    "vite.config.ts",
    ".eslintrc.cjs",
    "src"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
